<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false"
        android:state_focused="false">
        <shape android:shape="rectangle">
            <solid android:color="#001478"/>
            <corners android:radius="8dp"/>
            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp"/>
            <stroke
                android:color="#63AFFF"
                android:width="2dp"/>
            <gradient
                android:angle="270"
                android:centerY="0.55"
                android:endColor="#EE683DFF"
                android:startColor="#C100D5DC"
                android:centerColor="#A90058DC"
                android:type="linear"/>
        </shape>

    </item>

    <item android:state_pressed="true"
        android:state_focused="false">
        <shape android:shape="rectangle">
            <solid android:color="#001478"/>
            <corners android:radius="8.5dp"/>
            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp"/>
            <stroke
                android:color="#E987FF"
                android:width="1dp"/>
            <gradient
                android:angle="270"
                android:centerY="0.5"
                android:endColor="#CBFF5DFC"
                android:startColor="#D23C9AFF"
                android:centerColor="#DCA75AFF"
                android:type="linear"/>
        </shape>
    </item>
</selector>