<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false"
        android:state_focused="false">
        <shape android:shape="rectangle">
            <solid android:color="#007878"/>
            <corners android:radius="8dp"/>
            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp"/>
            <stroke
                android:color="#00B1A2"
                android:width="2dp"/>
            <gradient
                android:angle="270"
                android:centerY="0.55"
                android:centerColor="#DF0090A3"
                android:endColor="#DF005CA3"
                android:startColor="#E114FBE0"
                android:type="linear"/>
        </shape>

    </item>

    <item android:state_pressed="true"
        android:state_focused="false">
        <shape android:shape="rectangle">
            <solid android:color="#007878"/>
            <corners android:radius="8dp"/>
            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp"/>
            <stroke
                android:color="#007FB1"
                android:width="2dp"/>
            <gradient
                android:angle="270"
                android:centerY="0.55"
                android:centerColor="#DF005CA3"
                android:endColor="#CD0062CA"
                android:startColor="#E10099BF"
                android:type="linear"/>
        </shape>

    </item>
</selector>